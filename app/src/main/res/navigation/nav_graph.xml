<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.newsimple.fragments.ListFragment"
        android:label="Заметки"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_listFragment_to_editFragment"
            app:destination="@id/editFragment" />
<!--        <argument-->
<!--            android:name="currentNote"-->
<!--            app:argType="com.example.newsimple.entities.Note" />-->
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.newsimple.fragments.AddFragment"
        android:label="Добавить заметку"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.example.newsimple.fragments.EditFragment"
        android:label="Изменить заметку"
        tools:layout="@layout/fragment_edit" >
        <action
            android:id="@+id/action_editFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="currentNote"
            app:argType="com.example.newsimple.entities.Note" />
    </fragment>
</navigation>